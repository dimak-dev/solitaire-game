{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "paths": {
      "Components/*": ["./src/components/*"],
      "Pages/*": ["./src/pages/*"],
      "Redux/*": ["./src/redux/*"],
      "Types/*": ["./src/types/*"],
      "Utils/*": ["./src/utils/*"]
    },
    "noImplicitAny": true,
    "module": "es2022",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*",
    "./types/custom.d.ts"
  ]
}